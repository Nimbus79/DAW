extends layout

block content
  .w3-container
    .w3-card-4
      header.w3-container.w3-teal
        h3.w3-center Upload de um ficheiro
      .w3-container
        h3.w3-container
          b Upload
        form.w3-container(id='form' action='/uploaded' name='form' method='POST' enctype='multipart/form-data')
          b Ficheiro
          input.w3-input.w3-border(id='ficheiro' type='file' name='ficheiro')
          b Descrição
          input.w3-input.w3-border(id='desc' name='desc')
          br
          button.w3-button.w3-center.w3-teal(id='enviar' type='submit') Enviar
      hr(style="border-color:teal")
      .w3-container
        h3 
          b Ficheiros
        table.w3-table.w3-border.w3-bordered.w3-white(id='ficheiros' class='table')
      br