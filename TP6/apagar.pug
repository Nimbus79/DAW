extends layout

block content
    .w3-container
        .w3-card-4.w3-light-grey
            header.w3-container.w3-teal
                h3.w3-center Lista de Tarefas
            table.w3-table.w3-border.w3-bordered.w3-white(class="table")
                tr
                    th(width="18%") Data de registo
                    th(width="18%") Prazo
                    th(width="18%") Descrição
                    th(width="18%") Tipo
                    th(width="18%") Estado
                    th(width="10%")
                each task in lista
                    if (task.apagar == 'nao')
                        form(action='/apagada' method='POST') 
                            table.w3-table.w3-border.w3-bordered.w3-white(class="table")
                                tr
                                    td(width="18%")= task.data
                                        input(type="hidden" name="data" value=task.data)
                                    td(width="18%")= task.prazo
                                        input(type="hidden" name="prazo" value=task.prazo)
                                    td(width="18%")= task.desc
                                        input(type="hidden" name="desc" value=task.desc)
                                    td(width="18%")= task.tipo
                                        input(type="hidden" name="tipo" value=task.tipo)
                                    td(width="18%")= task.estado
                                        input(type="hidden" name="estado" value=task.estado)
                                    td(width="10%")
                                        input(type="hidden" name="id" value=task.id)
                                        input(type="submit" value="Apagar")
            footer.w3-container.w3-teal
                address.w3-center 
                    a(href='/') Voltar à página principal