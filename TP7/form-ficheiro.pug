extends layout

block content
    .w3-container
        .w3-card-4
            header.w3-container.w3-teal
                h3.w3-center Upload de um ficheiro
            .w3-container
                h3
                    b Upload
                form.w3-container(action='/processaForm' method='POST' enctype='multipart/form-data')
                    b Ficheiro
                    input.w3-input.w3-border(type='file' name='ficheiro')
                    b Descrição
                    input.w3-input.w3-border(type='text' name='desc')
                    br
                    input.w3-btn.w3-center.w3-teal(type='submit' value='Enviar')
            if (fich.length > 0)
                hr(style="border-color:teal")
                .w3-container
                    h3 
                        b Ficheiros
                    table.w3-table.w3-border.w3-bordered.w3-white(class="table")
                        tr
                            th Ficheiro
                            th Descrição
                            th Path
                            th Timestamp
                        each file in fich
                            tr
                                td
                                    a(href='/'+file.nome)= file.nome
                                td= file.desc
                                td= file.path
                                td= file.timestamp
            br