extends layout

block corpo
    .w3-container
        .w3-card-4
            header.w3-container.w3-light-grey
                h1(style="text-align:center") Obras Musicais
            .w3-container
                table.w3-table.w3-bordered
                    tr
                        th Compositor
                        th Obras
                    each comp in ind
                        tr
                            td(style="vertical-align:middle")= comp.compositor
                            td
                                ul
                                    each music in comp.musicas
                                        li
                                            a(href="http://localhost:7900/music/" + music._id)= music.titulo